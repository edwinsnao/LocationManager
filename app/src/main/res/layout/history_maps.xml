<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/show_time"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <Button
            android:layout_margin="10dp"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:id="@+id/look_detail"
            android:layout_alignParentRight="true"
            android:text="@string/detail_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:checked="false"
            android:layout_weight="1"
            android:id="@+id/cb_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交通"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white" />

        <CheckBox
            android:layout_weight="1"
            android:checked="false"
            android:id="@+id/cb_satelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫星"
            android:textColor="@android:color/white" />

        <CheckBox
            android:layout_weight="1"
            android:checked="true"
            android:layout_marginRight="5dp"
            android:id="@+id/cb_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比例尺"
            android:textColor="@android:color/white" />
        <CheckBox
            android:layout_weight="1"
            android:checked="true"
            android:layout_marginRight="5dp"
            android:id="@+id/cb_scale_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放按钮"
            android:textColor="@android:color/white" />
        </LinearLayout>
   <!-- <com.tencent.tencentmap.mapsdk.map.MapView
        android:id="@+id/tencentMapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />-->
    <com.baidu.mapapi.map.MapView
        android:id="@+id/historymap"
        android:layout_below="@id/ll_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:screenOrientation="portrait"
        android:clickable="true" />


</LinearLayout>