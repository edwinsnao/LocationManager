<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_style"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                />

            <!--<EditText
                android:id="@+id/et_searchData"
                android:hint="@string/sear_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->
            <com.example.fazhao.locationmanager.baidu_map.widget.SwipeDeleteListView1
                android:id="@+id/list_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.example.fazhao.locationmanager.baidu_map.widget.SwipeDeleteListView1>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="10dp"
                android:background="@drawable/button_style"
                android:layout_weight="1"
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"/>

            <Button
                android:background="@drawable/button_style"
                android:layout_weight="1"
                android:id="@+id/delete_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="删除所有记录"/>
            <!-- <Button
                 android:id="@+id/ok"
                 android:text="确定"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>-->
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>